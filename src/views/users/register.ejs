<% layout('layouts/layout') %> <% layout('layouts/layout') %> <%
layout('layouts/layout') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4 p-md-5">
          <!-- Header Section -->
          <div class="text-center mb-4">
            <div
              class="bg-primary bg-gradient p-3 rounded-circle d-inline-block mb-3"
            >
              <i class="bi bi-person-plus-fill text-white fs-1"></i>
            </div>
            <h1 class="fw-bold mb-2">Create Account</h1>
            <p class="text-muted">
              Join our community to start your camping adventures
            </p>
          </div>

          <!-- Registration Form -->
          <form
            action="/users/register"
            method="POST"
            class="validateForm"
            novalidate
          >
            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                placeholder="Choose a username"
                required
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please choose a username.</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="your@email.com"
                required
              />
              <div class="invalid-feedback">Please provide a valid email.</div>
            </div>

            <!-- Password -->
            <div class="mb-4">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="........"
                required
                minlength="8"
              />
              <div class="invalid-feedback">
                Password must be at least 8 characters.
              </div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <button class="btn btn-primary btn-lg fw-bold py-2" type="submit">
                <i class="bi bi-person-plus me-2"></i>Register
              </button>
            </div>

            <!-- Login Link -->
            <div class="text-center">
              <p class="text-muted mb-0">
                Already have an account?
                <a
                  href="/users/login"
                  class="text-primary fw-semibold text-decoration-none"
                  >Sign in</a
                >
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
